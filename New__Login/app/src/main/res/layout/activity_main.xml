<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/username"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:layout_x="21dp"
        android:layout_y="203dp"
        android:gravity="left|center"
        android:text="Username:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_x="138dp"
        android:layout_y="201dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" "
        android:textColor="#C305E4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:layout_x="30dp"
        android:layout_y="327dp"
        android:gravity="left|center"
        android:text="Password:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="326dp"
        android:ems="10"
        android:hint=" "
        android:inputType="textPassword"
        android:textColor="#EC05EC"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logbtn"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_x="265dp"
        android:layout_y="399dp"
        android:text="Login"
        android:onClick="login"
        android:backgroundTint="#B52CCC"
        android:textColor="#070707"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="191dp"
        android:layout_height="87dp"
        android:layout_x="114dp"
        android:layout_y="532dp"
        android:text=" "
        android:textColor="#C81505"
        android:textSize="20sp"
        android:textStyle="bold"/>


</AbsoluteLayout>