<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3F3"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="292dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_span="2"
                android:textSize="32dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtInput"
                android:layout_width="229dp"
                android:layout_height="350sp"
                android:layout_span="2"
                android:textSize="32dp"
                android:textStyle="bold|italic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFED">

            <Button
                android:id="@+id/btnCE"
                android:background="#E1410E"
                android:text="CE"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#E8400B" />

            <Button
                android:id="@+id/btnC"
                android:background="#FFFFFF"
                android:text="C"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:backgroundTint="#1CDD15" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="214dp"
                android:layout_span="2"
                android:background="#ED0C0C"
                android:text="Delete"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                app:backgroundTint="#F40808" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFED">

            <Button
                android:id="@+id/btnNumber7"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="7"
                 />

            <Button
                android:id="@+id/btnNumber8"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="8" />

            <Button
                android:id="@+id/btnNumber9"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="9" />

            <Button
                android:id="@+id/btnNumberAdd"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="#F6F3F3"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                app:backgroundTint="#17A80F" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFED">

            <Button
                android:id="@+id/btnNumber4"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="4" />

            <Button
                android:id="@+id/btnNumber5"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="5" />

            <Button
                android:id="@+id/btnNumber6"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="6" />

            <Button
                android:id="@+id/btnNumberSub"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#17A80F"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1EFED">

            <Button
                android:id="@+id/btnNumber1"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="1" />

            <Button
                android:id="@+id/btnNumber2"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="2" />

            <Button
                android:id="@+id/btnNumber3"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="3" />

            <Button
                android:id="@+id/btnNumberMul"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#17A80F"
                android:text="*" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnNumber0"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="0" />

            <Button
                android:id="@+id/btnDot"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#A36F6F"
                android:text="." />

            <Button
                android:id="@+id/btnResult"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#F4F418"
                android:text="=" />

            <Button
                android:id="@+id/btnNumberDiv"
                android:background="#F6F3F3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                app:backgroundTint="#17A80F"
                android:text="/" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>