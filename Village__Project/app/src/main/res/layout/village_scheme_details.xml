<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewSchemeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scheme Name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSchemeName"
        android:layout_marginTop="16dp"
        android:text="Scheme Description: Not specified"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_marginTop="8dp"
        android:text="Start Date: Not specified"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewStartDate"
        android:layout_marginTop="8dp"
        android:text="End Date: Not specified"
        android:textSize="18sp" />

    <!-- Add additional details and buttons as needed -->

</RelativeLayout>
